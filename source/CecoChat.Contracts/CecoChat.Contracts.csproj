<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.18.0" />
    <PackageReference Include="Grpc.Net.Client" Version="2.39.0" />
    <PackageReference Include="Grpc.Tools" Version="2.40.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\protos\uuid.proto">
      <Link>uuid.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\backplane-message.proto">
      <Link>Backplane\backplane-message.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\history-message.proto">
      <Link>History\history-message.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\history\history-service.proto">
      <Link>History\history-service.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\idgen-service.proto" GrpcServices="All">
      <Link>IDGen\idgen-service.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\messaging\message-type.proto">
      <Link>Messaging\message-type.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\messaging\data-type.proto">
      <Link>Messaging\data-type.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\messaging\delivery-status.proto">
      <Link>Messaging\delivery-status.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\messaging\send-service.proto" GrpcServices="All">
      <Link>Messaging\send-service.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\messaging\reaction-service.proto" GrpcServices="All">
      <Link>Messaging\reaction-service.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\messaging\listen-service.proto" GrpcServices="All">
      <Link>Messaging\listen-service.proto</Link>
    </Protobuf>
  </ItemGroup>

</Project>
