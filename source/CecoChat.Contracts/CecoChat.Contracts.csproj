<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.18.0" />
    <PackageReference Include="Grpc.Net.Client" Version="2.39.0" />
    <PackageReference Include="Grpc.Tools" Version="2.40.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\protos\uuid.proto">
      <Link>uuid.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\backplane-message.proto">
      <Link>Backplane\backplane-message.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\client-message.proto">
      <Link>Client\client-message.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\history-service.proto" GrpcServices="All">
      <Link>Client\history-service.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\listen-service.proto" GrpcServices="All">
      <Link>Client\listen-service.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\send-service.proto" GrpcServices="All">
      <Link>Client\send-service.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\history-message.proto">
      <Link>History\history-message.proto</Link>
    </Protobuf>
    <Protobuf Include="..\protos\idgen-service.proto" GrpcServices="All">
      <Link>IDGen\idgen-service.proto</Link>
    </Protobuf>
  </ItemGroup>

</Project>
