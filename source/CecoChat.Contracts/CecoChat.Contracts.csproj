<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.18.0" />
    <PackageReference Include="Grpc.Net.Client" Version="2.39.0" />
    <PackageReference Include="Grpc.Tools" Version="2.40.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="backplane\backplane-message.proto" />
    <Protobuf Include="history\data-type.proto" />
    <Protobuf Include="history\delivery-status.proto" />
    <Protobuf Include="history\history-message.proto" />
    <Protobuf Include="history\history-service.proto" />
    <Protobuf Include="history\data-message.proto" />
    <Protobuf Include="history\reaction-message.proto" />
    <Protobuf Include="idgen\idgen-service.proto" GrpcServices="All" />
    <Protobuf Include="messaging\message-type.proto" />
    <Protobuf Include="messaging\data-type.proto" />
    <Protobuf Include="messaging\delivery-status.proto" />
    <Protobuf Include="messaging\send-service.proto" GrpcServices="All" />
    <Protobuf Include="messaging\reaction-service.proto" GrpcServices="All" />
    <Protobuf Include="messaging\listen-service.proto" GrpcServices="All" />
    <Protobuf Include="state\chat-state.proto" />
    <Protobuf Include="state\state-service.proto" GrpcServices="All" />
    <Protobuf Include="uuid.proto" />
  </ItemGroup>

</Project>
