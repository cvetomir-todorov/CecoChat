{
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },
  "ConfigDB": {
    "Endpoints": [
      "localhost:6379"
    ],
    "ConnectRetry": 16,
    "ConnectTimeout": 5000,
    "KeepAlive": 2
  },
  "Jwt": {
    "Secret": "secret that is long and hard to guess",
    "Issuer": "issuer",
    "Audience": "audience",
    "AccessTokenExpiration": "00:30:00.0"
  },
  "Swagger": {
    "UseSwagger": true,
    "UseSwaggerUI": true,
    "Url": "/swagger/v1/swagger.json",
    "AddAuthorizationHeader": true,
    "OpenApiInfo": {
      "Title": "CecoChat BFF",
      "Version": "v1",
      "Description": "CecoChat API for BFF 1.0"
    }
  }
}
