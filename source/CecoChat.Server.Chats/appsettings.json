{
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },
  "ConfigDb": {
    "Connect": {
      "ConnectionString": "Host=localhost:5433,localhost:5434;Database=config;Username=cecochat_dev;Password=secret;Load Balance Hosts=true;",
      "EnableRetryOnFailure": true,
      "MaxRetryCount": 3,
      "MaxRetryDelay": "00:00:05.0",
      "DbContextPoolSize": 32,
      "HealthTimeout": "00:00:05.0"
    }
  },
  "ChatsDb": {
    "ContactPoints": [
      "localhost:9042",
      "localhost:9043"
    ],
    "LocalDc": "Europe",
    "SocketConnectTimeout": "00:00:05.0",
    "ExponentialReconnectPolicy": true,
    "ExponentialReconnectPolicyBaseDelay": "00:00:00.100",
    "ExponentialReconnectPolicyMaxDelay": "00:00:05.0",
    "HealthTimeout": "00:00:05.0"
  },
  "Backplane": {
    "Kafka": {
      "BootstrapServers": [
        "localhost:9091",
        "localhost:9092"
      ]
    },
    "HistoryConsumer": {
      "ConsumerGroupId": "history-consumer",
      "AutoOffsetReset": "Earliest",
      "EnablePartitionEof": false,
      "AllowAutoCreateTopics": false,
      "EnableAutoCommit": false
    },
    "ReceiversConsumer": {
      "ConsumerGroupId": "state-receivers-consumer",
      "AutoOffsetReset": "Earliest",
      "EnablePartitionEof": false,
      "AllowAutoCreateTopics": false,
      "EnableAutoCommit": false
    },
    "SendersConsumer": {
      "ConsumerGroupId": "state-senders-consumer",
      "AutoOffsetReset": "Earliest",
      "EnablePartitionEof": false,
      "AllowAutoCreateTopics": false,
      "EnableAutoCommit": false
    },
    "TopicMessagesByReceiver": "messages-by-receiver",
    "Health": {
      "Producer": {
        "ProducerId": "health-producer",
        "Acks": "All",
        "LingerMs": 0.0,
        "MessageTimeoutMs": 5000,
        "MessageSendMaxRetries": 1
      },
      "Topic": "health",
      "Timeout": "00:00:05.0"
    }
  },
  "Jwt": {
    "Secret": "secret that is long and hard to guess",
    "Issuer": "issuer",
    "Audience": "audience"
  },
  "Telemetry": {
    "Logging": {
      "Export": {
        "TargetHost": "localhost",
        "TargetPort": 4317,
        "Protocol": "Grpc",
        "BatchPeriod": "00:00:01.0",
        "BatchSizeLimit": 1000,
        "BatchQueueLimit": 100000
      }
    },
    "Tracing": {
      "Sampling": {
        "Strategy": "Probability",
        "Probability": 0.1
      },
      "Export": {
        "TargetHost": "localhost",
        "TargetPort": 4317,
        "Protocol": "Grpc",
        "ExportProcessorType": "Batch",
        "BatchExportScheduledDelayMillis": 2000
      }
    },
    "Metrics": {
      "Prometheus": {
        "ScrapeEndpointPath": "/metrics",
        "ScrapeResponseCacheDurationMilliseconds": 0
      }
    }
  }
}
